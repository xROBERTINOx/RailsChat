<h1>Listing articles</h1>
<%= link_to 'New Article', new_article_path %>
<br><br>
<br>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
      <td><%= link_to 'Edit', edit_article_path(article) %></td>
      <td><%= button_to 'Destroy', article_path(article),
              method: :delete,
              data: { turbo_confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
